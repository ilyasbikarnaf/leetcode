class Solution(object):
    def smallestEvenMultiple(self, n):
        if n%2 ==0 and 2<=n:
            return n
        else: return n*2
        """
        :type n: int
        :rtype: int
        """


            /**
    * @param {number} n
    * @return {number}
    */
    var smallestEvenMultiple = function(n) {
        return n%2===0 ? n : n*2
        
    };
